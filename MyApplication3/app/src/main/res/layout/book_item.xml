<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/main_book_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/main_book_item_cover"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:adjustViewBounds="true"
                android:src="@drawable/home"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
               />
            <CheckBox android:id="@+id/cb" android:layout_height="25dp" android:layout_width="25dp"
                android:visibility="invisible"/>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/line1">
                <TextView
                    android:id="@+id/main_book_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    tools:text="九州缥缈录"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/main_book_item_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/test_chapter_content"
                    android:maxLines="4"
                    android:textStyle="italic"
                    android:ellipsize="end"
                    android:padding="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">
                    <ProgressBar
                        android:id="@+id/main_book_item_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:background="@null"
                        android:theme="@style/FABTheme"/>

                    <TextView
                        android:id="@+id/main_book_item_progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        tools:text="56%"/>
                </LinearLayout>
                </LinearLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>

